<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/fest11bgcrop">
    <TextView 
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent" 
    	android:text="TextView"
    	android:id="@+id/bandName"
    	android:textColor="#000000"
    	android:textSize="24dip" android:textStyle="bold" android:gravity="center_horizontal" android:paddingTop="10px"></TextView>
    <ImageView android:id="@+id/bandPic"
    	android:gravity="center_horizontal"
    	android:layout_below="@id/bandName"
    	android:src="@drawable/noband"
    	android:layout_width="fill_parent" android:paddingTop="25px" android:layout_height="136dip"></ImageView>
    <GridView
    	android:id="@+id/bandShows"
    	android:layout_alignParentBottom="true"
    	android:layout_height="100dip"
    	android:layout_width="fill_parent"
    	android:layout_alignLeft="@+id/bandInfo"
    	android:layout_alignRight="@+id/bandInfo"></GridView>
    <ScrollView android:id="@+id/Scroll1"
    			android:layout_width="fill_parent"
    			android:layout_height="175dip"
    			android:layout_above="@+id/bandShowsTitle" android:layout_below="@+id/bandPic">
    <TextView android:id="@+id/bandInfo"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:textColor="#000000"
    />
    </ScrollView>
    <TextView android:id="@+id/bandShowsTitle"
    	android:layout_above="@id/bandShows"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Shows"
    	android:textSize="16dip"
    	android:textStyle="bold"
    	android:background="#000000"
    	android:textColor="#FFFFFF"
    />
    
</RelativeLayout>
